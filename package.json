{
  "name": "mocksmith",
  "packageManager": "yarn@4.12.0",
  "description": "Utility functions for quickly generating test data based on templates",
  "license": "MIT",
  "version": "1.2.1",
  "author": "Corinna Kuhn",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.esm.json && tsc --project ./tsconfig.cjs.json",
    "docs": "typedoc src/index.ts --tsconfig ./tsconfig.esm.json --name 'mocksmith' --includeVersion",
    "lint:style": "prettier 'src/**/*.ts' --check",
    "lint:es": "eslint 'src/**/*.ts'",
    "lint": "yarn lint:style && yarn lint:es",
    "lint:fix": "eslint 'src/**/*.ts' --fix && prettier 'src/**/*.ts' --write",
    "lint:json-output": "eslint-output",
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "prepare": "is-ci || husky install",
    "prepack": "yarn build",
    "release:dry": "NPM_TOKEN=1234 npx semantic-release --dry-run"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.1",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-output": "^3.0.1",
    "eslint-plugin-import": "^2.24.2",
    "expect-more-jest": "^5.4.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "jest-junit": "^12.2.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "semantic-release": "^17.4.7",
    "ts-jest": "^27.0.5",
    "typedoc": "^0.22.3",
    "typescript": "~4.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        140
      ]
    }
  }
}
